<fieldset>
  <legend>Sign Up</legend>
  {{email-input email=credentials.email}}
  {{password-input password=credentials.password}}
  {{password-confirmation-input password=credentials.passwordConfirmation}}
  <div class="btn-toolbar">
    <button type="submit" class="btn btn-default" {{action "reset"}}><span class="glyphicon glyphicon-remove"></span> Cancel</button>
    <button type="submit" class="btn btn-primary" {{action "submit"}}><span class="glyphicon glyphicon-user"></span> Sign Up</button>
  </div>
</fieldset>
