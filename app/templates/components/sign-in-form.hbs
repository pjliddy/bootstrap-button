<fieldset>
  <legend>Sign In</legend>

  {{email-input email=credentials.email}}
  {{password-input password=credentials.password}}

  <div class="button-toolbar">
    <button type="reset" class="btn btn-default" {{action "reset"}}><span class="glyphicon glyphicon-remove"></span> Cancel</button>
    <button type="submit" class="btn btn-primary" {{action "submit"}}><span class="glyphicon glyphicon-log-in"></span> Sign In</button>
  </div>
</fieldset>
